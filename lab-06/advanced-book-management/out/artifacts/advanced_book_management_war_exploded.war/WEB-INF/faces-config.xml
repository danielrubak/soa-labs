<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <from-view-id>/readers/add-form.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{ReaderBean.addReader}</from-action>
            <from-outcome>READER_ADDED</from-outcome>
            <to-view-id>/readers/readers.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-action>#{ReaderBean.onBackButton}</from-action>
            <from-outcome>ON_BACK_CALLBACK</from-outcome>
            <to-view-id>/readers/readers.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/readers/update-form.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{ReaderBean.updateReader}</from-action>
            <from-outcome>READER_UPDATED</from-outcome>
            <to-view-id>/readers/readers.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-action>#{ReaderBean.onBackButton}</from-action>
            <from-outcome>ON_BACK_CALLBACK</from-outcome>
            <to-view-id>/readers/readers.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/readers/delete-form.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{ReaderBean.deleteReader}</from-action>
            <from-outcome>READER_DELETED</from-outcome>
            <to-view-id>/readers/readers.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-action>#{ReaderBean.onBackButton}</from-action>
            <from-outcome>ON_BACK_CALLBACK</from-outcome>
            <to-view-id>/readers/readers.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>

</faces-config>